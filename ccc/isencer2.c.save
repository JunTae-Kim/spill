#include <stdio.h>
#include <stdlib.h>
#include <wiringPi.h>
#include <softPwm.h>

#define PIR1 25
#define PWM 1
#define DIR 22

int main(void)
	{
		if(wiringPiSetup() == -1)
		return 1;

		pinMode(PIR1, INPUT);
		pinMode(PWM, PWM_OUTPUT);
		pinMOde(DIR, OUTPUT);

		digitalWrite(PWM, LOW);
		digitalWrite(DIR, HIGH);

		softPwmCreate(PWM,0,30);


		for(;;)

		{
			if(digitalRead(PIR1) == 0)
			{
			printf("Detection\n");
			softPwmWrite(PWM, 20);
			delay(500);
			}

			else
			{
			printf("Not Detected\n");
			softPwmWrite(PWM, 30);
			delay(500);
			}
		}
	return 0;
	}
